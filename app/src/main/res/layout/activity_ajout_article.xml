<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjoutArticle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="25dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            app:cardCornerRadius="8.0dip"
            app:cardElevation="10.0dip"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="25dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="25dp">

                    <LinearLayout
                        android:id="@+id/layouttop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Designation"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:text="Designation(اسم المنتج  )"
                                android:textColor="@color/blue_colisage" />

                            <EditText
                                android:id="@+id/edt_designation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:text="Code à barre"
                                android:textColor="@color/blue_colisage" />

                            <TextView
                                android:id="@+id/edt_code_barre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/round_disconnect"
                                android:editable="false"
                                android:ems="10"
                                android:inputType="textPersonName" />

                            <Button
                                android:id="@+id/btscan"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/iconscan" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:text="Unite (الوحدة )"
                                android:textColor="@color/blue_colisage" />

                            <Spinner
                                android:id="@+id/spin_unite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/valeurunite"
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="NB de piece par unité"
                                    android:textColor="@color/blue_colisage" />

                                <TextView
                                    android:id="@+id/textVie47w5"
                                    android:layout_width="190dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="عدد القطع لكل وحدة "

                                    android:textColor="@color/color_g_8"

                                    android:textSize="16dp"
                                    android:typeface="serif" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_valeur_unite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="numberDecimal"
                                android:text="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView355"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Prix Achat TTC"
                                    android:textColor="@color/color_g_8"

                                    android:textSize="16dp"

                                    android:typeface="serif" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="190dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="ثمن الشراء "

                                    android:textColor="@color/color_g_8"

                                    android:textSize="16dp"
                                    android:typeface="serif" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/est_prix_achat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:text="TVA"
                                android:textColor="@color/blue_colisage" />

                            <Spinner
                                android:id="@+id/spin_tva"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textViewf7"
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Prix Vente TTC"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="ثمن البيع بالتفصيل "
                                    android:textColor="@color/colorPrimary" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_prixvente"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="numberDecimal" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView7d"
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Prix vente Gros"
                                    android:textColor="@color/color_g_16"

                                    android:textSize="16dp"

                                    android:typeface="serif" />

                                <TextView
                                    android:id="@+id/textView7d5"
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"

                                    android:gravity="left"

                                    android:text="ثمن البيع بالجملة"
                                    android:textColor="@color/color_g_16"
                                    android:textSize="16dp"
                                    android:typeface="serif" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_prixgros"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:ems="10"
                                android:inputType="numberDecimal"
                                android:padding="5dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:text="Famille ( نوعية المنتج)"
                                android:textColor="@color/blue_colisage" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinfamille"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:drawSelectorOnTop="true" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/layouttop"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btvalider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_green"
                            android:text="valider (تسجيل)"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/btretour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_red"
                            android:text="Retour(العودة)"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </LinearLayout>

                </RelativeLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>